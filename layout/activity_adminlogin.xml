<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminlogin"
    android:layout_gravity="center"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Admin here:"
        android:textAlignment="center"
        android:textColor="@color/dorange"
        />
    <View
        android:layout_width="130dp"
        android:layout_gravity="center"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/lgrey"
        android:layout_marginBottom="10dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Email To"
            android:textSize="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/to"
            android:background="@android:color/transparent"
            android:text="admin.vaxin@gmail.com"
            android:enabled="false"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/contactadmin"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_margin="5dp"
            android:text="Email"
            android:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:padding="10dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Or, Call"
            android:textSize="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/callto"
            android:background="@android:color/transparent"
            android:text="+8801888504938"
            android:enabled="false"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/callbutton"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_margin="5dp"
            android:text="Call"
            android:textAllCaps="false" />

    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/lgrey"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="5dp"
            android:text="Admin Login PIN:" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/role"
            android:spinnerMode="dropdown"
            android:background="@android:drawable/btn_dropdown"
            android:layout_gravity="center"
            android:hapticFeedbackEnabled="true"
            android:layout_marginVertical="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/admintext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:hint="Enter PIN"
                android:inputType="number" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/adminbutton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_marginTop="16dp"
            android:text="Enter"
            android:textAllCaps="false" />

    </LinearLayout>


</LinearLayout>