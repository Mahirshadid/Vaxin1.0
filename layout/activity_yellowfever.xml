<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".yellowfever">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/circle2"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_fever"
                android:padding="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lgrey"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yellow Fever"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/text"/>

        </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:textSize="20sp"
                android:text="শর্তাদি"
                android:textColor="@color/dorange"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:textSize="20sp"
                android:text="টিকাদান শুধুমাত্র 1 বছর বা তার বেশি বয়সী ভ্রমণকারীদের জন্য প্রয়োজন - যে দেশ থেকে - বা বিমানবন্দরের মাধ্যমে ট্রানজিটে - হলুদ জ্বরের সংক্রমণের ঝুঁকি রয়েছে।"
                android:textColor="@color/text"
                android:textStyle="bold" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="5dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/regothervacbtn"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:layout_marginTop="1dp"
            android:padding="20dp"
            android:text="Go to Registration Page"
            android:textAllCaps="false" />
    </LinearLayout>

</ScrollView>